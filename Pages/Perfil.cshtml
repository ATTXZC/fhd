@page
@model Eco_life.Pages.PerfilModel
@{
    ViewData["Title"] = "Meu Perfil";
}


        <h2>Meu Perfil</h2>

        <!-- Informações do Usuário -->
        <div class="user-info">
            <h4>Informações do Usuário</h4>
            @if (Model.Usuario != null)
            {
                <p><strong>Nome:</strong> @Model.Usuario.Nome_User</p>
                <p><strong>Email:</strong> @Model.Usuario.Email_User</p>
            }
            else
            {
                <p>Usuário não encontrado.</p>
            }
        </div>

        <!-- Configurações de Conta -->
        <div class="account-settings">
            <h4>Configurações de Conta</h4>
            <p><strong>Notificações:</strong> Ativadas</p>
            <p><strong>Idioma:</strong> Português</p>
            <form method="post" asp-page-handler="ChangeSettings">
                <button type="submit" class="btn btn-secondary">Alterar Configurações</button>
            </form>
        </div>

        <!-- Histórico de Atividades -->
        <div class="activity-history">
            <h4>Histórico de Atividades</h4>
            <ul class="activity-list">
                <li>Login realizado em 10/11/2024</li>
                <li>Atualização de perfil em 08/11/2024</li>
                <li>Nova senha definida em 01/11/2024</li>
            </ul>
        </div>

        <!-- Botões de Logout e Exclusão de Conta -->
        <form method="post" asp-page-handler="Logout" class="d-inline">
            <button type="submit" class="btn btn-primary">Sair</button>
        </form>

        <form method="post" asp-page-handler="ExcluirConta" onsubmit="return confirm('Você tem certeza que deseja excluir sua conta?');" class="d-inline">
            <button type="submit" class="btn btn-danger">Excluir Conta</button>
        </form>
    </div>


    <style>
        /* CSS básico para estilizar a página */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7f6;
            color: #333;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
        }
        
        .profile-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

        h2 {
            color: #2c3e50;
            border-bottom: 2px solid #2c3e50;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .user-info, .account-settings, .activity-history {
            margin-bottom: 20px;
        }

        .user-info p, .account-settings p {
            margin: 5px 0;
        }

        .btn {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #3498db;
            color: #fff;
        }

        .btn-danger {
            background-color: #e74c3c;
            color: #fff;
        }

        .btn-secondary {
            background-color: #95a5a6;
            color: #fff;
        }

        .activity-list {
            list-style: none;
            padding: 0;
        }

        .activity-list li {
            padding: 8px 0;
            border-bottom: 1px solid #ddd;
        }

        .activity-list li:last-child {
            border-bottom: none;
        }

        /* Estilo responsivo */
        @media (max-width: 600px) {
            .profile-container {
                padding: 20px;
            }

            .btn {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>